FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      CFBG;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 -3 0 0 1 0 0];//mol m^-3

internalField   uniform 8e-3;

boundaryField
{
    OUTLET
    {
        type            zeroGradient;
    }

    WALL1
    {
        type            zeroGradient;
    }
    WALL2
    {
        type            zeroGradient;
    }



   
    FRONTBACK1
    {
        type            empty;
    }
    FRONTBACK2
    {
        type            empty;
    }



    INLET
    {
        type            uniformFixedValue;
        uniformValue
        {
            type              csvFile;
            nHeaderLine       0;
            refColumn         0;
            componentColumns  (4);
            separator         ",";
            mergeSeparators   no;
            file              "concentrations.csv";
        }

    }
}

